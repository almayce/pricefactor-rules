{
  "categories": {
    "base_parameters": {
      "stop_on_first": false,
      "rules": [
        {
          "id": "calculate_sections_3_5",
          "priority": 10,
          "conditions": {
            "$and": [
              { "base_parameters.base_price": {"$greater-than": 0} },
              {
                "base_parameters.section_count": {"$greater-than-or-equals": 3}
              },
              { "base_parameters.section_count": {"$less-than": 5} }
            ]
          },
          "action": "add",
          "metadata": {
            "description": "Minimal project scope with a limited number of sections - suitable for simple landing pages with essential content structure",
            "value": 300
          }
        },
        {
          "id": "calculate_sections_5_8",
          "priority": 20,
          "conditions": {
            "$and": [
              { "base_parameters.base_price": {"$greater-than": 0} },
              {
                "base_parameters.section_count": {"$greater-than-or-equals": 5}
              },
              { "base_parameters.section_count": {"$less-than": 8} }
            ]
          },
          "action": "add",
          "metadata": {
            "description": "Medium-sized project requiring more content organization and increased development effort to maintain consistency across multiple sections",
            "value": 600
          }
        },
        {
          "id": "calculate_sections_8_12",
          "priority": 30,
          "conditions": {
            "$and": [
              { "base_parameters.base_price": {"$greater-than": 0} },
              {
                "base_parameters.section_count": {"$greater-than-or-equals": 8}
              },
              { "base_parameters.section_count": {"$less-than": 12} }
            ]
          },
          "action": "add",
          "metadata": {
            "description": "Large-scale project with substantial content volume requiring complex navigation, advanced layout design, and significant development time",
            "value": 1000
          }
        },
        {
          "id": "calculate_sections_12_more",
          "priority": 40,
          "conditions": {
            "$and": [
              { "base_parameters.base_price": {"$greater-than": 0} },
              {
                "base_parameters.section_count": {"$greater-than-or-equals": 12}
              }
            ]
          },
          "action": "add",
          "metadata": {
            "description": "Enterprise-level project with extensive content structure demanding sophisticated architecture, comprehensive navigation system, and extensive development resources",
            "value": 1500
          }
        },
        {
          "id": "source_of_design_is_template",
          "priority": 50,
          "conditions": {
            "$and": [
              { "base_parameters.base_price": {"$greater-than": 0} },
              { "base_parameters.source_of_design": {"$equals": "template"} }
            ]
          },
          "action": "multiply",
          "metadata": {
            "description": "Using pre-designed template provides a cost-effective solution with minimal design customization, reducing development time",
            "value": 1.0
          }
        },
        {
          "id": "source_of_design_is_partially_custom",
          "priority": 60,
          "conditions": {
            "$and": [
              { "base_parameters.base_price": {"$greater-than": 0} },
              {
                "base_parameters.source_of_design": {
                  "$equals": "partial_custom"
                }
              }
            ]
          },
          "action": "multiply",
          "metadata": {
            "description": "Partial customization requires professional designer involvement to adapt and modify template elements, significantly increasing design and development effort",
            "value": 1.8
          }
        },
        {
          "id": "source_of_design_is_fully_custom",
          "priority": 70,
          "conditions": {
            "$and": [
              { "base_parameters.base_price": {"$greater-than": 0} },
              { "base_parameters.source_of_design": {"$equals": "full_custom"} }
            ]
          },
          "action": "multiply",
          "metadata": {
            "description": "Completely custom design from scratch demands extensive designer collaboration, multiple design iterations, unique component creation, and substantially more development time",
            "value": 3.0
          }
        }
      ]
    }
  }
}

