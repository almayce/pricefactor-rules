{
  "categories": {
    "support": {
      "stop_on_first": false,
      "rules": [
        {
          "id": "support_postproduction_months",
          "priority": 10,
          "conditions": { "support.postproduction": {"$equals": true} },
          "action": "multiply_path",
          "metadata": {
            "description": "Post-launch support includes bug fixes, minor adjustments, content updates, and technical assistance during the stabilization period",
            "path": "support.postproduction_months.count",
            "value": 200
          }
        },
        {
          "id": "support_postproduction_months_discount",
          "priority": 20,
          "conditions": {
            "support.postproduction_months.count": {"$greater-than": 6}
          },
          "action": "multiply",
          "metadata": {
            "description": "Long-term post-production commitment allows for volume pricing efficiency",
            "value": 0.85
          }
        },
        {
          "id": "support_bug_fixes_months",
          "priority": 30,
          "conditions": {
            "support.bug_fixes_months.count": {"$greater-than-or-equals": 1}
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Extended bug fix warranty provides ongoing stability maintenance and issue resolution beyond standard delivery",
            "path": "support.bug_fixes_months.count",
            "value": 150
          }
        },
        {
          "id": "support_bug_fixes_first_month_included",
          "priority": 40,
          "conditions": {
            "support.bug_fixes_months.count": {"$greater-than-or-equals": 1}
          },
          "action": "subtract",
          "metadata": {
            "description": "First month of bug fixes included in base project cost",
            "value": 100
          }
        },
        {
          "id": "support_training_demonstration",
          "priority": 60,
          "conditions": {
            "support.training_demonstration": {"$equals": true}
          },
          "action": "add",
          "metadata": {
            "description": "Training session includes comprehensive walkthrough, documentation review, content management instruction, and Q&A support",
            "value": 500
          }
        },
        {
          "id": "support_hosting_management",
          "priority": 80,
          "conditions": { "support.hosting_management": {"$equals": true} },
          "action": "multiply_path",
          "metadata": {
            "description": "Hosting management covers server monitoring, uptime maintenance, security patches, performance optimization, and technical troubleshooting",
            "path": "support.hosting_management_months.count",
            "value": 75
          }
        },
        {
          "id": "support_domain_management",
          "priority": 90,
          "conditions": { "support.domain_management": {"$equals": true} },
          "action": "multiply_path",
          "metadata": {
            "description": "Domain management includes DNS configuration, domain renewal tracking, nameserver updates, and subdomain setup",
            "path": "support.domain_management_months.count",
            "value": 30
          }
        },
        {
          "id": "support_ssl_certificate",
          "priority": 100,
          "conditions": {
            "$and": [
              { "support.hosting_management": {"$equals": true} },
              { "support.ssl_certificate": {"$equals": true} }
            ]
          },
          "action": "add",
          "metadata": {
            "description": "SSL certificate setup involves certificate acquisition, installation, auto-renewal configuration, and HTTPS enforcement implementation",
            "value": 150
          }
        },
        {
          "id": "support_email_setup_custom_domain",
          "priority": 110,
          "conditions": {
            "$and": [
              { "support.domain_management": {"$equals": true} },
              { "support.email_setup_custom_domain": {"$equals": true} }
            ]
          },
          "action": "add",
          "metadata": {
            "description": "Custom domain email configuration requires MX record setup, email service integration, inbox configuration, and delivery testing",
            "value": 300
          }
        },
        {
          "id": "support_monitoring_uptime",
          "priority": 120,
          "conditions": {
            "$and": [
              { "support.hosting_management": {"$equals": false} },
              { "support.monitoring_uptime": {"$equals": true} }
            ]
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Uptime monitoring includes availability checks, downtime alerts, performance tracking, and incident response coordination",
            "path": "support.monitoring_uptime_months.count",
            "value": 120
          }
        },
        {
          "id": "support_backup_automation",
          "priority": 130,
          "conditions": { "support.backup_automation": {"$equals": true} },
          "action": "multiply_path",
          "metadata": {
            "description": "Automated backup system involves scheduled backup configuration, secure storage setup, restoration testing, and recovery procedures documentation",
            "path": "support.backup_automation_months.count",
            "value": 80
          }
        },
        {
          "id": "support_backup_automation_with_database",
          "priority": 140,
          "conditions": {
            "$and": [
              { "support.backup_automation": {"$equals": true} },
              { "functionality.database_integration": {"$equals": true} }
            ]
          },
          "action": "warning",
          "metadata": {
            "description": "Backup automation should be implemented for database integration to prevent data loss"
          }
        }
      ]
    }
  }
}
