{
  "categories": {
    "technical_requirements": {
      "stop_on_first": false,
      "rules": [
        {
          "id": "technical_requirements_adaptability_true",
          "priority": 10,
          "conditions": {
            "technical_requirements.adaptability": {
              "$equals": true
            }
          },
          "action": "add",
          "metadata": {
            "description": "Responsive design for all device sizes requires extensive cross-device testing, flexible layouts, adaptive images, and comprehensive breakpoint management",
            "value": 300
          }
        },
        {
          "id": "technical_requirements_adaptability_false",
          "priority": 20,
          "conditions": {
            "technical_requirements.adaptability": {
              "$equals": false
            }
          },
          "action": "subtract",
          "metadata": {
            "description": "Desktop-only design simplifies development by eliminating mobile considerations and responsive layout complexity",
            "value": 200
          }
        },
        {
          "id": "technical_requirements_animation_level_none",
          "priority": 30,
          "conditions": {
            "technical_requirements.animation_level": {
              "$equals": "none"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Static interface without animations provides straightforward development with minimal interaction complexity",
            "path": "_bases.technical_animation",
            "value": 0
          }
        },
        {
          "id": "technical_requirements_animation_level_simple_hover",
          "priority": 40,
          "conditions": {
            "technical_requirements.animation_level": {
              "$equals": "simple_hover"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Basic hover effects and simple transitions require CSS animation development, timing adjustments, and interaction refinement",
            "path": "_bases.technical_animation",
            "value": 1.0
          }
        },
        {
          "id": "technical_requirements_animation_level_moderate",
          "priority": 50,
          "conditions": {
            "technical_requirements.animation_level": {
              "$equals": "moderate"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Moderate animation complexity involves scroll-triggered effects, multi-step animations, performance optimization, and smooth interaction choreography",
            "path": "_bases.technical_animation",
            "value": 1.2
          }
        },
        {
          "id": "technical_requirements_animation_level_complex_interactive",
          "priority": 60,
          "conditions": {
            "technical_requirements.animation_level": {
              "$equals": "complex_interactive"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Advanced interactive animations demand sophisticated JavaScript libraries, physics-based motion, gesture handling, and extensive performance tuning",
            "path": "_bases.technical_animation",
            "value": 1.35
          }
        },
        {
          "id": "technical_requirements_animation_level_complex_interactive_browser_support_legacy_included",
          "priority": 70,
          "conditions": {
            "$and": [
              {
                "technical_requirements.animation_level": {
                  "$equals": "complex_interactive"
                }
              },
              {
                "technical_requirements.browser_support": {
                  "$equals": "legacy_included"
                }
              }
            ]
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Complex animations with legacy browser support require polyfills, fallback implementations, progressive enhancement strategies, and extensive cross-browser debugging",
            "path": "_bases.technical_animation",
            "value": 1.5
          }
        },
        {
          "id": "technical_requirements_browser_support_modern_only",
          "priority": 80,
          "conditions": {
            "technical_requirements.browser_support": {
              "$equals": "modern_only"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Modern browsers only allow use of latest web standards, reducing testing complexity and eliminating legacy compatibility concerns",
            "path": "_bases.technical_browser",
            "value": 0
          }
        },
        {
          "id": "technical_requirements_browser_support_standart",
          "priority": 90,
          "conditions": {
            "technical_requirements.browser_support": {
              "$equals": "standart"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Standard browser support includes recent versions, requiring modest backward compatibility testing and occasional polyfill implementation",
            "path": "_bases.technical_browser",
            "value": 1.05
          }
        },
        {
          "id": "technical_requirements_browser_support_legacy_included",
          "priority": 100,
          "conditions": {
            "technical_requirements.browser_support": {
              "$equals": "legacy_included"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Legacy browser support demands extensive polyfills, code transpilation, graceful degradation, alternative implementations, and comprehensive cross-browser testing",
            "path": "_bases.technical_browser",
            "value": 1.15
          }
        },
        {
          "id": "technical_requirements_cross_platform_web_only",
          "priority": 110,
          "conditions": {
            "technical_requirements.cross_platform": {
              "$equals": "web_only"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Web-only deployment simplifies development with standard web technologies and conventional hosting requirements",
            "path": "_bases.technical_platform",
            "value": 0
          }
        },
        {
          "id": "technical_requirements_cross_platform_pwa",
          "priority": 120,
          "conditions": {
            "technical_requirements.cross_platform": {
              "$equals": "pwa"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Progressive Web App requires service worker implementation, offline functionality, app manifest configuration, installation prompts, and mobile-specific optimizations",
            "path": "_bases.technical_platform",
            "value": 1.2
          }
        },
        {
          "id": "technical_requirements_performance_optimization_basic",
          "priority": 130,
          "conditions": {
            "technical_requirements.performance_optimization": {
              "$equals": "basic"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Basic optimization includes standard minification, image compression, and essential best practices without extensive performance engineering",
            "path": "_bases.technical_performance",
            "value": 0
          }
        },
        {
          "id": "technical_requirements_performance_optimization_standart",
          "priority": 140,
          "conditions": {
            "technical_requirements.performance_optimization": {
              "$equals": "standart"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Standard performance optimization incorporates code splitting, lazy loading, caching strategies, and performance monitoring implementation",
            "path": "_bases.technical_performance",
            "value": 1.08
          }
        },
        {
          "id": "technical_requirements_performance_optimization_aggressive",
          "priority": 150,
          "conditions": {
            "technical_requirements.performance_optimization": {
              "$equals": "aggressive"
            }
          },
          "action": "multiply_path",
          "metadata": {
            "description": "Aggressive optimization demands advanced techniques including critical CSS extraction, resource preloading, image optimization pipelines, CDN configuration, and comprehensive performance auditing",
            "path": "_bases.technical_performance",
            "value": 1.2
          }
        },
        {
          "id": "technical_requirements_offline_functionality",
          "priority": 160,
          "conditions": {
            "technical_requirements.offline_functionality": {
              "$equals": true
            }
          },
          "action": "add",
          "metadata": {
            "description": "Offline capabilities require service worker architecture, cache management strategies, data synchronization logic, and extensive offline scenario testing",
            "value": 1000
          }
        },
        {
          "id": "technical_requirements_legacy_browser_warning",
          "priority": 161,
          "conditions": {
            "$and": [
              {
                "technical_requirements.browser_support": {
                  "$equals": "legacy_included"
                }
              },
              {
                "technical_requirements.animation_level": {
                  "$equals": "complex_interactive"
                }
              }
            ]
          },
          "action": "warning",
          "metadata": {
            "description": "Complex animations on legacy browsers may result in performance issues and require extensive polyfills and fallbacks"
          }
        },
        {
          "id": "technical_requirements_pwa_requirements",
          "priority": 162,
          "conditions": {
            "technical_requirements.cross_platform": {
              "$equals": "pwa"
            }
          },
          "action": "warning",
          "metadata": {
            "description": "PWA implementation requires HTTPS, valid SSL certificate, service worker registration, and web app manifest configuration"
          }
        },
        {
          "id": "technical_requirements_offline_data_sync",
          "priority": 163,
          "conditions": {
            "$and": [
              {
                "technical_requirements.offline_functionality": {
                  "$equals": true
                }
              },
              {
                "functionality.database_integration": {
                  "$equals": true
                }
              }
            ]
          },
          "action": "warning",
          "metadata": {
            "description": "Offline functionality with database requires conflict resolution strategy and data synchronization mechanisms"
          }
        }
      ]
    }
  }
}
